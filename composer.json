{
    "name": "puli/symfony-bundle",
    "description": "Integrates the Puli library into the Symfony2 full-stack framework.",
    "homepage": "http://puli.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Bernhard Schussek",
            "email": "bschussek@gmail.com"
        }
    ],
    "require": {
        "symfony/framework-bundle": "^2.3",
        "puli/repository": "~1.0",
        "puli/discovery": "~1.0",
        "puli/url-generator": "~1.0",
        "puli/composer-plugin": "~1.0",
        "puli/symfony-bridge": "~1.0"
    },
    "require-dev": {
        "symfony/twig-bundle": "^2.3",
        "puli/twig-extension": "~1.0",
        "phpunit/phpunit": "^4.6"
    },
    "minimum-stability": "beta",
    "suggest": {
        "puli/twig-extension": "Enables Puli support in Twig."
    },
    "autoload": {
        "psr-4": {
            "Puli\\SymfonyBundle\\": ""
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "support": {
        "issues": "https://github.com/puli/issues/issues"
    }
}
