{
    "name": "puli/symfony-bundle",
    "description": "Integrates the Puli library into the Symfony2 full-stack framework.",
    "homepage": "http://puli.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Bernhard Schussek",
            "email": "bschussek@gmail.com"
        }
    ],
    "require": {
        "symfony/framework-bundle": "~2.3",
        "puli/repository": "~1.0",
        "puli/discovery": "~1.0",
        "puli/factory": "~1.0",
        "puli/symfony-bridge": "~1.0",
        "webmozart/path-util": "~1.0"
    },
    "require-dev": {
        "puli/assetic-extension": "~1.0",
        "puli/twig-extension": "~1.0"
    },
    "minimum-stability": "dev",
    "suggest": {
        "puli/assetic-extension": "For Puli support in Assetic.",
        "puli/twig-extension": "For Puli support in Twig.",
        "symfony/security-bundle": "",
        "symfony/twig-bundle": "",
        "symfony/web-profiler-bundle": "",
        "sensio/distribution-bundle": "",
        "sensio/framework-extra-bundle": "",
        "sensio/generator-bundle": ""
    },
    "autoload": {
        "psr-4": {
            "Puli\\Extension\\Symfony\\PuliBundle\\": ""
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "support": {
        "issues": "https://github.com/puli/puli/issues"
    }
}
