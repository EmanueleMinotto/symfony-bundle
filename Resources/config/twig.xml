<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="puli.twig.extension.class">Webmozart\Puli\Extension\Twig\PuliExtension</parameter>
        <parameter key="puli.twig.template_loader.class">Webmozart\Puli\Extension\Twig\PuliTemplateLoader</parameter>
        <parameter key="puli.twig.cache_warmer.class">Webmozart\Puli\Extension\Twig\CacheWarmer\TwigTemplateCacheWarmer</parameter>
    </parameters>

    <services>
        <service id="puli.twig.extension" class="%puli.twig.extension.class%" public="false">
            <argument type="service" id="puli.resource_locator" />
            <tag name="twig.extension" />
        </service>

        <service id="puli.twig.template_loader" class="%puli.twig.template_loader.class%" public="false">
            <argument type="service" id="puli.resource_locator" />
            <tag name="twig.loader"/>
        </service>

        <service id="puli.twig.cache_warmer" class="%puli.twig.cache_warmer.class%" public="false">
            <argument type="service" id="puli.resource_locator" />
            <argument type="service" id="twig" />
            <tag name="kernel.cache_warmer" />
        </service>
    </services>
</container>
