<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="puli.assetic.asset_factory.class">Puli\Extension\Symfony\PuliBundle\Assetic\LazyPuliAssetFactory</parameter>
    </parameters>

    <services>
        <service id="puli.assetic.asset_factory" class="%puli.assetic.asset_factory.class%" public="false">
            <argument type="service" id="puli.resource_locator" />
            <argument type="service" id="service_container" />
            <argument>%assetic.debug%</argument>
        </service>

        <service id="assetic.asset_factory" alias="puli.assetic.asset_factory" />
    </services>
</container>
