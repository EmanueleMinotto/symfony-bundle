<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="puli.assetic.twig.extension.class">Puli\Extension\Assetic\Twig\PuliAsseticExtension</parameter>
    </parameters>

    <services>
        <service id="puli.assetic.twig.extension" class="%puli.assetic.twig.extension.class%" public="false">
            <argument type="service" id="puli.repository" />
            <tag name="twig.extension" />
        </service>
    </services>
</container>
