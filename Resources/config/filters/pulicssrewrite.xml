<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="puli.assetic.filter.pulicssrewrite.class">Puli\Extension\Assetic\Filter\PuliCssRewriteFilter</parameter>
    </parameters>

    <services>
        <service id="puli.assetic.filter.pulicssrewrite" class="%puli.assetic.filter.pulicssrewrite.class%">
            <tag name="assetic.filter" alias="pulicssrewrite" />
        </service>
    </services>
</container>
