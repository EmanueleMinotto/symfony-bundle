<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="puli.resource_locator.path">%kernel.root_dir%/../vendor/resource-locator.php</parameter>
        <parameter key="puli.resource_locator.class">Webmozart\Puli\Locator\ResourceLocatorInterface</parameter>
        <parameter key="puli.resource_locator_factory.class">Webmozart\Symfony\PuliBundle\LocatorFactory\ComposerLocatorFactory</parameter>
        <parameter key="puli.file_locator.chain.class">Webmozart\Symfony\PuliBridge\Config\FileLocatorChain</parameter>
        <parameter key="puli.file_locator.kernel.class">Webmozart\Symfony\PuliBridge\Config\ChainableKernelFileLocator</parameter>
        <parameter key="puli.file_locator.puli.class">Webmozart\Symfony\PuliBridge\Config\PuliFileLocator</parameter>
        <parameter key="puli.file_locator.paths.class">Webmozart\Symfony\PuliBridge\Config\ChainableFileLocator</parameter>
        <parameter key="puli.twig.extension.class">Webmozart\Twig\PuliExtension\PuliExtension</parameter>
        <parameter key="puli.twig.file_loader.class">Webmozart\Twig\PuliExtension\PuliLoader</parameter>
    </parameters>

    <services>
        <service id="puli.resource_locator"
                 class="%puli.resource_locator.class%"
                 factory-class="%puli.resource_locator_factory.class%"
                 factory-method="createResourceLocator">
            <argument type="string">%puli.resource_locator.path%</argument>
        </service>

        <service id="puli.file_locator.kernel" class="%puli.file_locator.kernel.class%" public="false">
            <argument type="service" id="kernel" />
        </service>

        <service id="puli.file_locator.puli" class="%puli.file_locator.puli.class%" public="false">
            <argument type="service" id="puli.resource_locator" />
        </service>

        <service id="puli.file_locator.paths" class="%puli.file_locator.paths.class%" public="false">
            <argument>%kernel.root_dir%/Resources</argument>
        </service>

        <service id="puli.file_locator.chain" class="%puli.file_locator.chain.class%" public="false">
            <argument type="collection">
                <argument type="service" id="puli.file_locator.kernel" />
                <argument type="service" id="puli.file_locator.puli" />
                <argument type="service" id="puli.file_locator.paths" />
            </argument>
        </service>

        <service id="puli.twig.extension" class="%puli.twig.extension.class%" public="false">
            <argument type="service" id="puli.resource_locator" />
            <tag name="twig.extension" />
        </service>

        <service id="puli.twig.file_loader" class="%puli.twig.file_loader.class%" public="false">
            <argument type="service" id="puli.resource_locator" />
            <tag name="twig.loader"/>
        </service>

        <service id="file_locator" alias="puli.file_locator.chain" />
    </services>
</container>
