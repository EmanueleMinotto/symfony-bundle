<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="puli.factory.class" type="constant">PULI_FACTORY_CLASS</parameter>
    </parameters>

    <services>
        <service id="puli.factory" class="%puli.factory.class%" public="false" />

        <service id="puli.file_locator.kernel" class="Puli\SymfonyBridge\HttpKernel\ChainableKernelFileLocator" public="false">
            <argument type="service" id="kernel" />
            <argument>%kernel.root_dir%/Resources</argument>
        </service>

        <service id="puli.file_locator.puli" class="Puli\SymfonyBridge\Config\PuliFileLocator" public="false">
            <argument type="service" id="puli.repository" />
        </service>

        <service id="puli.file_locator.paths" class="Puli\SymfonyBridge\Config\ChainableFileLocatorImpl" public="false">
            <argument>%kernel.root_dir%/Resources</argument>
        </service>

        <service id="puli.file_locator.chain" class="Puli\SymfonyBridge\Config\FileLocatorChain" public="false">
            <argument type="collection">
                <argument type="service" id="puli.file_locator.kernel" />
                <argument type="service" id="puli.file_locator.puli" />
                <argument type="service" id="puli.file_locator.paths" />
            </argument>
        </service>

        <service id="file_locator" alias="puli.file_locator.chain" />
    </services>
</container>
